<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane prefHeight="400.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="milesapnash.astrostudy.RegisterController">
    <Button id="unselectedButton" layoutX="44.0" layoutY="26.0"
            mnemonicParsing="false" onAction="#toLogin" text="Log in"/>
    <Button id="selectedButton" layoutX="110.0" layoutY="26.0"
            mnemonicParsing="false" text="Sign up"/>
    <TextField fx:id="usernameField" layoutX="54.0" layoutY="80.0"
               prefHeight="25.0" prefWidth="291.0"
               promptText="Enter your username"/>
    <Label id="subtitle" layoutX="54.0" layoutY="120.0" text="USERNAME"/>
    <TextField fx:id="emailField" layoutX="54.0" layoutY="145.0"
               prefHeight="25.0" prefWidth="291.0"
               promptText="Enter your email address"/>
    <Label id="subtitle" layoutX="54.0" layoutY="185.0" text="EMAIL"/>
    <PasswordField fx:id="passwordField" layoutX="54.0" layoutY="210"
                   prefHeight="25.0" prefWidth="290.0"
                   promptText="Enter your password"/>
    <Label id="subtitle" layoutX="54.0" layoutY="250.0" text="PASSWORD"/>
    <Button layoutX="44.0" layoutY="301.0" mnemonicParsing="false"
            onAction="#attemptRegister" prefHeight="48.0" prefWidth="311.0"
            text="Sign Up"/>
</AnchorPane>
