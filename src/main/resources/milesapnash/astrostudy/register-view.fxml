<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="milesapnash.astrostudy.controllers.RegisterController">
    <Label fx:id="usernameErrorLabel" id="errorLabel" alignment="CENTER" layoutX="124.0"
           layoutY="120.0"
           prefHeight="18.0" prefWidth="275.0"/>
    <Label id="subtitle" layoutX="54.0" layoutY="120.0" text="USERNAME"/>
    <Label fx:id="emailErrorLabel" id="errorLabel" alignment="CENTER" layoutX="124.0"
           layoutY="185.0"
           prefHeight="18.0" prefWidth="275.0"/>
    <Label id="subtitle" layoutX="54.0" layoutY="185.0" text="EMAIL"/>
    <Label fx:id="passwordErrorLabel" id="errorLabel" alignment="CENTER" layoutX="124.0"
           layoutY="250.0"
           prefHeight="18.0" prefWidth="275.0"/>
    <Label id="subtitle" layoutX="54.0" layoutY="250.0" text="PASSWORD"/>
    <Button id="unselectedButton" layoutX="44.0" layoutY="26.0" mnemonicParsing="false"
            onAction="#toLogin" text="Log in"/>
    <Button id="selectedButton" layoutX="110.0" layoutY="26.0" mnemonicParsing="false"
            text="Sign up"/>
    <Button layoutX="44.0" layoutY="301.0" mnemonicParsing="false" onAction="#attemptRegister"
            prefHeight="48.0" prefWidth="311.0" text="Sign Up"/>
    <TextField fx:id="usernameField" layoutX="54.0" layoutY="80.0" prefHeight="25.0"
               prefWidth="291.0" promptText="Enter your username" onAction="#attemptRegister"/>

    <TextField fx:id="emailField" layoutX="54.0" layoutY="145.0" prefHeight="25.0" prefWidth="291.0"
               promptText="Enter your email address" onAction="#attemptRegister"/>

    <PasswordField fx:id="passwordField" layoutX="54.0" layoutY="210" prefHeight="25.0"
                   prefWidth="290.0" promptText="Enter your password" onAction="#attemptRegister"/>
</AnchorPane>
